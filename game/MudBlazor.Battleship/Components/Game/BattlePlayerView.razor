@namespace MudBlazor.Battleship.Components

<CascadingValue Value="this">
    <MudGrid>
        <MudItem xs="6">
            <MudCard Elevation="0">
                <MudCardHeader Class="battleship-lobby-card-header">
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">@Game.CurrentUser.Username</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <BattleGrid />
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="6">
            <MudCard Elevation="0">
                <MudCardHeader Class="battleship-lobby-card-header">
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">Port</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                   <Port />
                </MudCardContent>
            </MudCard>
            <MudCard Elevation="0" Class="mt-4">
                <MudCardHeader Class="battleship-lobby-card-header">
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">Dev Tools</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    @foreach(var message in DevLog)
                    {
                        <MudText Typo="Typo.body2">@message</MudText>
                    }
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</CascadingValue>