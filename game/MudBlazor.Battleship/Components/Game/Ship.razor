@namespace MudBlazor.Battleship.Components
@using MudBlazor.Extensions
@using MudBlazor.Utilities;

<MudPaper draggable="true" Class="@ShipClass" @ondragstart="@(() => HandleDragStart(Warship))"> 
    @Warship.Class.ToDescriptionString()
</MudPaper>


@code {
    [CascadingParameter] BattlePlayerView DropContainer { get; set; }
    [Parameter] public string Class { get; set; }
    [Parameter] public Warship Warship { get; set; }

    private bool rotate;

    protected string ShipClass =>
        new CssBuilder("mud-warship")
          .AddClass(Class)
        .Build();

    private void HandleDragStart(Warship ship)
    {
        DropContainer.Payload = ship;
    }
}